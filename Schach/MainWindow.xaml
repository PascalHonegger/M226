            <cells:CellControl Grid.Column="1" Grid.Row="7" DataContext="{Binding B1}"/>
            <cells:CellControl Grid.Column="2" Grid.Row="7" DataContext="{Binding C1}"/>
            <cells:CellControl Grid.Column="3" Grid.Row="7" DataContext="{Binding D1}"/>
            <cells:CellControl Grid.Column="4" Grid.Row="7" DataContext="{Binding E1}"/>
            <cells:CellControl Grid.Column="5" Grid.Row="7" DataContext="{Binding F1}"/>
            <cells:CellControl Grid.Column="6" Grid.Row="7" DataContext="{Binding G1}"/>
            <cells:CellControl Grid.Column="7" Grid.Row="7" DataContext="{Binding H1}"/>

        </Grid>
        <Button Content="Start" Grid.Row="2" Grid.Column="0" Click="Button_Click" />
        <TextBlock x:Name="TextBlock" HorizontalAlignment="Left" Margin="10,9.6,0,0" Grid.Row="1" Grid.Column="0"
                   TextWrapping="Wrap" Text="Le Verlauf" VerticalAlignment="Top" Height="480" Width="127"/>
        <Grid Grid.Column="2" HorizontalAlignment="Left" Height="200" Grid.Row="1" VerticalAlignment="Top" Margin="10,10,0,0" Width="100">
            <Grid.Background>
                <ImageBrush ImageSource="Resources/chessboard.jpg" Stretch="UniformToFill"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <cells:CellControl Grid.Column="0" Grid.Row="0" DataContext="{Binding blackRookOne}"/>
            <cells:CellControl Grid.Column="1" Grid.Row="0" DataContext="{Binding blackKnightOne}"/>
            <cells:CellControl Grid.Column="2" Grid.Row="0" DataContext="{Binding blackBishopOne}"/>
            <cells:CellControl Grid.Column="3" Grid.Row="0" DataContext="{Binding blackQueenOne}"/>
            <cells:CellControl Grid.Column="0" Grid.Row="1" DataContext="{Binding blackRookTwo}"/>
            <cells:CellControl Grid.Column="1" Grid.Row="1" DataContext="{Binding blackKnightTwo}"/>
            <cells:CellControl Grid.Column="2" Grid.Row="1" DataContext="{Binding blackBishopTwo}"/>
            <cells:CellControl Grid.Column="3" Grid.Row="1" DataContext="{Binding H8}"/>
            <cells:CellControl Grid.Column="0" Grid.Row="2" DataContext="{Binding blackPawnOne}"/>
            <cells:CellControl Grid.Column="1" Grid.Row="2" DataContext="{Binding blackPawnTwo}"/>
            <cells:CellControl Grid.Column="2" Grid.Row="2" DataContext="{Binding blackPawnThree}"/>
            <cells:CellControl Grid.Column="3" Grid.Row="2" DataContext="{Binding blackPawnFour}"/>
            <cells:CellControl Grid.Column="0" Grid.Row="3" DataContext="{Binding blackPawnFive}"/>
            <cells:CellControl Grid.Column="1" Grid.Row="3" DataContext="{Binding blackPawnSix}"/>
            <cells:CellControl Grid.Column="2" Grid.Row="3" DataContext="{Binding blackPawnSeven}"/>
            <cells:CellControl Grid.Column="3" Grid.Row="3" DataContext="{Binding blackPawnEight}"/>
            <cells:CellControl Grid.Column="0" Grid.Row="4" DataContext="{Binding whitePawnOne}"/>
            <cells:CellControl Grid.Column="1" Grid.Row="4" DataContext="{Binding whitePawnTwo}"/>
            <cells:CellControl Grid.Column="2" Grid.Row="4" DataContext="{Binding whitePawnThree}"/>
            <cells:CellControl Grid.Column="3" Grid.Row="4" DataContext="{Binding whitePawnFour}"/>
            <cells:CellControl Grid.Column="0" Grid.Row="5" DataContext="{Binding whitePawnFive}"/>
            <cells:CellControl Grid.Column="1" Grid.Row="5" DataContext="{Binding whitePawnSix}"/>
            <cells:CellControl Grid.Column="2" Grid.Row="5" DataContext="{Binding whitePawnSeven}"/>
            <cells:CellControl Grid.Column="3" Grid.Row="5" DataContext="{Binding whitePawnEight}"/>
            <cells:CellControl Grid.Column="0" Grid.Row="6" DataContext="{Binding whiteRookOne}"/>
            <cells:CellControl Grid.Column="1" Grid.Row="6" DataContext="{Binding whiteKnightOne}"/>
            <cells:CellControl Grid.Column="2" Grid.Row="6" DataContext="{Binding whiteBishopOne}"/>
            <cells:CellControl Grid.Column="3" Grid.Row="6" DataContext="{Binding whiteQueenOne}"/>
            <cells:CellControl Grid.Column="0" Grid.Row="7" DataContext="{Binding whiteRookTwo}"/>
            <cells:CellControl Grid.Column="1" Grid.Row="7" DataContext="{Binding whiteKnightTwo}"/>
            <cells:CellControl Grid.Column="2" Grid.Row="7" DataContext="{Binding whiteBishopTwo}"/>
            <cells:CellControl Grid.Column="3" Grid.Row="7" DataContext="{Binding H1}"/>
        </Grid>

    </Grid>
</Window>