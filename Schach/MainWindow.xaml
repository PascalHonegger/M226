<Window x:Class="Chess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:boardPieces="clr-namespace:Chess.BoardPieces"
        xmlns:cells="clr-namespace:Chess.BoardPieces.Cells"
        mc:Ignorable="d"
        Title="LeSchach" Height="700" Width="800" MinWidth="800" MinHeight="700">
    <Grid d:DataContext="{d:DesignInstance boardPieces:Board}">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White" Offset="0" />
                <GradientStop Color="#FFFF0707" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="{Binding DimensionsChessBoard}" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="{Binding DimensionsChessBoard}" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid x:Name="ChessBoard" Grid.Column="1" Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="Resources/chessboard.jpg"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <cells:CellControl Grid.Column="0" Grid.Row="0" DataContext="{Binding A1}"  >
                <cells:CellControl.Background>
                    <ImageBrush ImageSource="Resources/Chess_blt45.svg.png" />
                </cells:CellControl.Background>
            </cells:CellControl>
            <cells:CellControl Grid.Column="1" Grid.Row="0" DataContext="{Binding A2}" Background="{Binding Bgc}"/>
            <cells:CellControl Grid.Column="2" Grid.Row="0" />
            <cells:CellControl Grid.Column="3" Grid.Row="0" />
            <cells:CellControl Grid.Column="4" Grid.Row="0" />
            <cells:CellControl Grid.Column="5" Grid.Row="0" />
            <cells:CellControl Grid.Column="6" Grid.Row="0" />
            <cells:CellControl Grid.Column="7" Grid.Row="0" />
            <cells:CellControl Grid.Column="0" Grid.Row="1" />
            <cells:CellControl Grid.Column="1" Grid.Row="1" />
            <cells:CellControl Grid.Column="2" Grid.Row="1" />
            <cells:CellControl Grid.Column="3" Grid.Row="1" />
            <cells:CellControl Grid.Column="4" Grid.Row="1" />
            <cells:CellControl Grid.Column="5" Grid.Row="1" />
            <cells:CellControl Grid.Column="6" Grid.Row="1" />
            <cells:CellControl Grid.Column="7" Grid.Row="1" />
            <cells:CellControl Grid.Column="0" Grid.Row="2" />
            <cells:CellControl Grid.Column="1" Grid.Row="2" />
            <cells:CellControl Grid.Column="2" Grid.Row="2" />
            <cells:CellControl Grid.Column="3" Grid.Row="2" />
            <cells:CellControl Grid.Column="4" Grid.Row="2" />
            <cells:CellControl Grid.Column="5" Grid.Row="2" />
            <cells:CellControl Grid.Column="6" Grid.Row="2" />
            <cells:CellControl Grid.Column="7" Grid.Row="2" />
        </Grid>
        <TextBlock x:Name="WhiteTime" TextWrapping="Wrap" Grid.Column="0" Grid.Row="0" />
        <TextBlock x:Name="BlackTime" TextWrapping="Wrap" Grid.Column="2" Grid.Row="0" />
        <Button x:Name="StartButton" Content="Start" Grid.Row="2" Grid.Column="0" Click="StartButton_Click" />

    </Grid>
</Window>