<Window x:Class="Chess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:boardPieces="clr-namespace:Chess.BoardPieces"
        xmlns:cells="clr-namespace:Chess.BoardPieces.Cells"
        mc:Ignorable="d"
        Title="LeSchach" Height="700" Width="800" MinWidth="800" MinHeight="700">
    <Grid d:DataContext="{d:DesignInstance boardPieces:Board}">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White" Offset="0" />
                <GradientStop Color="#FFFF0707" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="500" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="500" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="Resources/chessboard.jpg"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <cells:CellControl Grid.Column="0" Grid.Row="0" DataContext="{Binding A8}"/>
            <cells:CellControl Grid.Column="1" Grid.Row="0" DataContext="{Binding B8}"/>
            <cells:CellControl Grid.Column="2" Grid.Row="0" DataContext="{Binding C8}"/>
            <cells:CellControl Grid.Column="3" Grid.Row="0" DataContext="{Binding D8}"/>
            <cells:CellControl Grid.Column="4" Grid.Row="0" DataContext="{Binding E8}"/>
            <cells:CellControl Grid.Column="5" Grid.Row="0" DataContext="{Binding F8}"/>
            <cells:CellControl Grid.Column="6" Grid.Row="0" DataContext="{Binding G8}"/>
            <cells:CellControl Grid.Column="7" Grid.Row="0" DataContext="{Binding H8}"/>
            <cells:CellControl Grid.Column="0" Grid.Row="1" DataContext="{Binding A7}" />
            <cells:CellControl Grid.Column="1" Grid.Row="1" DataContext="{Binding B7}" />
            <cells:CellControl Grid.Column="2" Grid.Row="1" DataContext="{Binding C7}" />
            <cells:CellControl Grid.Column="3" Grid.Row="1" DataContext="{Binding D7}" />
            <cells:CellControl Grid.Column="4" Grid.Row="1" DataContext="{Binding E7}" />
            <cells:CellControl Grid.Column="5" Grid.Row="1" DataContext="{Binding F7}" />
            <cells:CellControl Grid.Column="6" Grid.Row="1" DataContext="{Binding G7}" />
            <cells:CellControl Grid.Column="7" Grid.Row="1" DataContext="{Binding H7}"/>
            <cells:CellControl Grid.Column="0" Grid.Row="2" />
            <cells:CellControl Grid.Column="1" Grid.Row="2" />
            <cells:CellControl Grid.Column="2" Grid.Row="2" />
            <cells:CellControl Grid.Column="3" Grid.Row="2" />
            <cells:CellControl Grid.Column="4" Grid.Row="2" />
            <cells:CellControl Grid.Column="5" Grid.Row="2" />
            <cells:CellControl Grid.Column="6" Grid.Row="2" />
            <cells:CellControl Grid.Column="7" Grid.Row="2" />
            <cells:CellControl Grid.Column="0" Grid.Row="3" />
            <cells:CellControl Grid.Column="1" Grid.Row="3" />
            <cells:CellControl Grid.Column="2" Grid.Row="3" />
            <cells:CellControl Grid.Column="3" Grid.Row="3" />
            <cells:CellControl Grid.Column="4" Grid.Row="3" />
            <cells:CellControl Grid.Column="5" Grid.Row="3" />
            <cells:CellControl Grid.Column="6" Grid.Row="3" />
            <cells:CellControl Grid.Column="7" Grid.Row="3" />
            <cells:CellControl Grid.Column="0" Grid.Row="4" />
            <cells:CellControl Grid.Column="1" Grid.Row="4" />
            <cells:CellControl Grid.Column="2" Grid.Row="4" />
            <cells:CellControl Grid.Column="3" Grid.Row="4" />
            <cells:CellControl Grid.Column="4" Grid.Row="4" />
            <cells:CellControl Grid.Column="5" Grid.Row="4" />
            <cells:CellControl Grid.Column="6" Grid.Row="4" />
            <cells:CellControl Grid.Column="7" Grid.Row="4" />
            <cells:CellControl Grid.Column="0" Grid.Row="5" />
            <cells:CellControl Grid.Column="1" Grid.Row="5" />
            <cells:CellControl Grid.Column="2" Grid.Row="5" />
            <cells:CellControl Grid.Column="3" Grid.Row="5" />
            <cells:CellControl Grid.Column="4" Grid.Row="5" />
            <cells:CellControl Grid.Column="5" Grid.Row="5" />
            <cells:CellControl Grid.Column="6" Grid.Row="5" />
            <cells:CellControl Grid.Column="7" Grid.Row="5" />
            <cells:CellControl Grid.Column="0" Grid.Row="6" />
            <cells:CellControl Grid.Column="1" Grid.Row="6" />
            <cells:CellControl Grid.Column="2" Grid.Row="6" />
            <cells:CellControl Grid.Column="3" Grid.Row="6" />
            <cells:CellControl Grid.Column="4" Grid.Row="6" />
            <cells:CellControl Grid.Column="5" Grid.Row="6" />
            <cells:CellControl Grid.Column="6" Grid.Row="6" />
            <cells:CellControl Grid.Column="7" Grid.Row="6" />
            <cells:CellControl Grid.Column="0" Grid.Row="7" />
            <cells:CellControl Grid.Column="1" Grid.Row="7" />
            <cells:CellControl Grid.Column="2" Grid.Row="7" />
            <cells:CellControl Grid.Column="3" Grid.Row="7" />
            <cells:CellControl Grid.Column="4" Grid.Row="7" />
            <cells:CellControl Grid.Column="5" Grid.Row="7" />
            <cells:CellControl Grid.Column="6" Grid.Row="7" />
            <cells:CellControl Grid.Column="7" Grid.Row="7" />

        </Grid>
        <TextBlock TextWrapping="Wrap" Grid.Column="0" Grid.Row="0" />
        <TextBlock TextWrapping="Wrap" Grid.Column="2" Grid.Row="0" />
        <Button Content="Start" Grid.Row="2" Grid.Column="0" Click="{Binding Path=StartGame}" />

    </Grid>
</Window>