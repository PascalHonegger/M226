<UserControl x:Class="Chess.Cells.CellControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cells="clr-namespace:Chess.Cells"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50" d:DataContext="{d:DesignInstance cells:CellViewModel}">
    <Grid Background="{Binding Bgc}">
        <Image Source="{Binding Image}" MouseDown="Image_MouseDown"/>
    </Grid>
</UserControl>
