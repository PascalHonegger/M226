<UserControl x:Class="Chess.BoardPieces.Cells.CellControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cells="clr-namespace:Chess.BoardPieces.Cells"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance cells:CellViewModel}">
    <Grid Background="{Binding Bgc}">
        <Image Source="{Binding Image}"/>
    </Grid>
</UserControl>
